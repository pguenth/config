def _ranger_cd(path=None):
    temp_file = $(mktemp -t "ranger_cd.XXXXXXXX").strip()
    path = path if not path is None else $PWD
    ranger --choosedir=@(temp_file) -- @(path)
    chosen_dir = $(cat -- @(temp_file))
    if not chosen_dir == "" and chosen_dir != $PWD:
        cd @(chosen_dir)
    rm -f -- @(temp_file)

